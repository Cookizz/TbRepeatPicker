<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RecurrenceOptionCreatorWeekButtonStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="RecurrenceOptionCreatorFreqSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:dropDownWidth">200dp</item>
    </style>

    <style name="EndSpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#383838</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FreqSpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#383838</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RecurrenceIntervalSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:dropDownHorizontalOffset">-20dp</item>
        <item name="android:dropDownWidth">88dp</item>
    </style>

    <style name="SButtonBarButtonStyleBase">
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="SButtonBarButtonStyle" parent="SButtonBarButtonStyleBase" />

</resources>
